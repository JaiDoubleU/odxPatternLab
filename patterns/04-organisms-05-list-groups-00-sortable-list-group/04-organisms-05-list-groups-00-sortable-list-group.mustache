<script>
    // onclick handlers for the up/down buttons
    $('.upbutton').on('click', function (event) {
        var hook = $(this).closest('.sortable-list-group-item').prev('.sortable-list-group-item');
        if (hook.length) {
            //hook.addClass('slide-bottom');
            var elementToMove = $(this).closest('.sortable-list-group-item').detach();
            //elementToMove.addClass('slide-top');
            hook.before(elementToMove);
        }
        event.stopPropagation();
    });

    $('.downbutton').on('click', function (event) {
        var hook = $(this).closest('.sortable-list-group-item ').next('.sortable-list-group-item');
        if (hook.length) {
            var elementToMove = $(this).closest('.sortable-list-group-item').detach();
            hook.after(elementToMove);
        }
        event.stopPropagation();
    });

    // onclick handler for each list item
    $('.sortable-list-group-item').on('click', function (event) {
        event.preventDefault();
        var checkbox = $(this).find('input[type=checkbox]');
        var isChecked = checkbox.prop('checked');
        checkbox.prop('checked', !isChecked);
        event.stopPropagation();
    });

    // onclick handler for each checkbox
    $('input[type=checkbox').on('click', function (event) {
        var isChecked = $(this).find('input[type=checkbox]').prop('checked');
        $(this).find('input[type=checkbox]').prop('checked', !isChecked);
        event.stopPropagation();
    });

    // enable drag/drop
    $(function() {
        $( ".sortable-items" ).sortable();
    });

</script>
