<div class="btn-group">
    {{> atoms-button:btn-default }}
    <button type="button" class="btn {{ buttonType }} dropdown-toggle" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
    	{{# caret }}<span class="{{ caret }}"></span>{{/ caret }}
        <span class="sr-only">{{ cta }}</span>
    </button>
    <ul class="dropdown-menu">
        {{# dropdownList }}
    	<li {{# separator }}role="separator"{{/ separator }}  ><a href="{{ url }}">{{ text }}</a></li>
        {{/ dropdownList }}
    </ul>
</div><!-- /btn-group -->
