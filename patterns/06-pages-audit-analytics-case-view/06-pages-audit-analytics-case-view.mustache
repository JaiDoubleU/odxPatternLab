{{> organisms-navbar("extraClass":"navbar-fixed-top", "pageTitle": "Case Details")}}
{{> organisms-secondary-navbar("extraClass":"navbar-fixed-top", "pageTitle": "Case #0000243568","hideNextPreviousButtons": true, "customBackButtonLink":"{{link.pages-case-list}}")}}
<script>
    var openDocumentViewer = function () {
        var viewerHref = document.querySelector('#documentViewerHref').value

        console.error('document location is ' + viewerHref);
        document.querySelector('.pl').parentNode.location = viewerHref;
    };
</script>
<div class="container-fluid page-top-padding page-bottom-padding">
    <input type="hidden" id="documentViewerHref" value='{{link.pages-documentViewer}}'>

    <div class="row">
        <div class="col-sm-7">
            <div class="panel panel-default">
                <div class="panel-heading">Case Details</div>
                <div class="panel-body">
                    <div class="col-xs-6">
                        <div class="form-group">
                            <label class="control-label">Case Name</label>
                            <input type='text' class="form-control" value="Case 0000243568" disabled>
                        </div>
                    </div>
                    <div class="col-xs-6">
                        <div class="form-group">
                            <label class="control-label">Supplier Name</label>
                            <input type='text' class="form-control" value="ACME Oilfield Supplies Ltd." disabled>
                        </div>
                    </div>
                    <div class="col-xs-6">
                        <div class="form-group">
                            <label class="control-label">Status</label>
                            <select class="form-control">
                                <option>Investigating</option>
                                <option>Closed</option>
                            </select>
                        </div>
                    </div>
                    <div class="col-xs-6">
                        <div class="form-group">
                            <label class="control-label">Recovered Amount</label>
                            <input type='text' class="form-control" value="">
                        </div>
                    </div>
                    <div class="col-xs-6">
                        <div class="form-group">
                            <label class="control-label">Assigned To</label>
                            <input type='text' class="form-control" value="Bill Anderson" disabled>
                        </div>
                    </div>
                    <div class="col-xs-6">
                        <div class="form-group">
                            <label class="control-label">Date Opened</label>
                            <div class="input-group">
                                <input type='text' class="form-control" value="12-22-2019" disabled>
                                <span class="input-group-btn">
                                    <button class="btn btn-default">
                                        <i class="far fa-calendar-alt"></i>
                                    </button>
                                </span>
                            </div>
                        </div>
                    </div>
                    <div class="col-xs-6">
                        <div class="form-group">
                            <label class="control-label">Date Closed</label>
                            <div class="input-group">
                                <input type="text" class="form-control">
                                <span class="input-group-btn">
                                    <button class="btn btn-default">
                                        <i class="far fa-calendar-alt"></i>
                                    </button>
                                </span>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <div class="panel panel-default hide">
                <div class="panel-heading">
                    <div class="panel-title">
                        Notes
                        <div class="btn-group btn-group-sm pull-right">
                            <button class="btn btn-sm btn-default">
                                Add a Note
                            </button>
                        </div>
                        <div class="clearfix"></div>
                    </div>
                </div>
                <div class="panel-body">
                   <textarea class="form-control" rows="3" width="100%"></textarea>
                </div>
            </div>
        </div>
        <div class="col-sm-5">
            {{> organisms-tabbed-panel('overrideDefaultTabs':true)}}

            <div class="panel panel-default">
                <div class="panel-heading">
                    <div class="panel-title">Case Summary</div>
                </div>
                <div class="panel-body">
                    <ul class="list-unstyled">
                        <li class="text-primary">Driver: Alex English </li>
                        <li class="small text-muted">Billed more than 24 hours on three occasions</li>
                    </ul>
                </div>
            </div>
            <div class="panel panel-default hide">
                <div class="panel-heading">
                    Attachments
                    <div class="btn-group btn-group-sm pull-right">
                        <button class="btn btn-sm btn-default">
                            Add an Attachment
                        </button>
                    </div>
                    <div class="clearfix"></div>
                </div>
                <div class="panel-body">
                    <div class="table-responsive">
                        {{> templates-attachments-list}}
                    </div>
                </div>
            </div>
            <div class="panel panel-default hide">
                <div class="panel-heading">
                    <div class="panel-title">
                        Comments
                        <div class="btn-group btn-group-sm pull-right">
                            <button class="btn btn-sm btn-default">
                                Add a Comment
                            </button>
                        </div>
                        <div class="clearfix"></div>
                    </div>
                </div>
                <div class="panel-body">
                    <div class="table-responsive">
                        {{> templates-comments-list}}
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-sm-12">
            <div class="panel panel-default">
                <div class="panel-heading">
                    <span class="panel-title">Anomalies </span>
                    <div class="btn-group btn-group-sm pull-right">
                        <button class="btn btn-sm btn-default">
                            Download Ticket Report
                        </button>
                        <button class="btn btn-sm btn-default">
                            Edit Anomalies
                        </button>
                    </div>
                    <div class="clearfix"></div>
                </div>
                <div class="panel-body">
                    <div class="table-responsive">
                        {{# anomalies-list-table-data}}
                            <div class="table-responsive multi-row-header">
                                <table class="table table-bordered text-nowrap">
                                    {{# thead }}
                                        <thead>
                                            <tr>
                                                <th width="15">&nbsp;</th>
                                                {{#th}}
                                                <th>{{ title }}</th>
                                                {{/th }}
                                            </tr>
                                        </thead>
                                    {{/ thead }}
                                    {{# tbody }}
                                        <tbody>
                                            {{#td}}
                                                <tr data-toggle="collapse" data-target="#toggle{{id}}"
                                                    class="accordion-toggle">

                                                    <td width="15">
                                                        <a class="btn btn-default btn-xs fas fa-chevron-down"
                                                            onmouseup="$(this).toggleClass('fa-chevron-up fa-chevron-down');"></a>
                                                    </td>
                                                    {{#data}}
                                                        <td>{{ value }}</td>

                                                    {{/data}}


                                                </tr>

                                                {{# tickets }}
                                                    <tr class="accordian-body collapse out" id="toggle{{id}}">
                                                        <td colspan="9">
                                                            <table class="table table-bordered table-striped">
                                                                {{# thead }}
                                                                    <thead>
                                                                        <tr>
                                                                            <th width="15">&nbsp;</th>
                                                                            {{#th}}
                                                                            <th>{{ title }}</th>
                                                                            {{/th }}
                                                                            <th width="15" class="text-center">Link</th>
                                                                            <!-- <th>
                                                                                Actions
                                                                            </th> -->
                                                                        </tr>

                                                                    </thead>
                                                                {{/ thead }}
                                                                {{# tbody }}
                                                                    <tbody>
                                                                        <tr>
                                                                            <td width="15">&nbsp;</td>
                                                                            {{#td}}
                                                                            <td>{{ value }}</td>
                                                                            {{/td }}
                                                                            <td width="15">
                                                                                <script>
                                                                                    function openDocumentViewerWindow() {
                                                                                        window.open("http://styleguide.transzap.com/?p=pages-documentViewer","_blank", "toolbar=yes,scrollbars=yes,resizable=yes,top=500,left=500,width=1200,height=600");
                                                                                    }
                                                                                </script>
                                                                                <button class="btn btn-link" onclick="openDocumentViewerWindow()">
                                                                                    <i class="far fa-external-link"></i>
                                                                                    View Ticket
                                                                                </button>

                                                                            </td>
                                                                            <!-- <td>
                                                                                {{> pages-case-view-actions-button}}
                                                                            </td> -->
                                                                        </tr>
                                                                    </tbody>
                                                                {{/ tbody }}
                                                            </table>
                                                        </td>
                                                    </tr>
                                                {{/tickets }}
                                            {{/td}}
                                        </tbody>
                                    {{/ tbody }}
                                </table>
                            </div>
                        {{/ anomalies-list-table-data }}
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<nav class="navbar navbar-inverse navbar-fixed-bottom" style="border-top: 1px solid #ccc;">
    <div class="container-fluid">
        <div class="btn-toolbar btn-toolbar-centered" role="toolbar">
            <div id="currentPOToolbar" class="btn-group" role="group">
                {{#customToolbarItems}}
                    <button class="btn btn-default">
                        <div>
                            <i class="{{{icon}}}"></i>
                        </div>
                        <div>
                            {{{ text }}}
                        </div>
                    </button>
                {{/customToolbarItems}}
            </div>
            <div id="proposedPOToolbar" class="btn-group hide" role="group">
                <button class="btn btn-default">
                    <div>
                        <i class="fas fa-thumbs-up text-success"></i>
                    </div>
                    <div>
                        Accept
                    </div>
                </button>
                <button class="btn btn-default">
                    <div>
                        <i class="fas fa-thumbs-down text-danger"></i>
                    </div>
                    <div>
                        Reject
                    </div>
                </button>
                <button class="btn btn-default">
                    <div>
                        <i class="fas fa-print"></i>
                    </div>
                    <div>
                        Print
                    </div>
                </button>
            </div>
        </div>
    </div>
</nav>

<script>
    $('body').addClass('page-bg');
</script>
