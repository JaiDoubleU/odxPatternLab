                <div class="col-xs-6">
                    <div class="btn-toolbar">
                        <div class="btn-group btn-group-sm hidden-xs hidden-sm visible-md visible-lg">
                            <a href="#" class="btn btn-default"><i class="fas fa-plus-circle"></i> {{addText}}</a>
                            <button href="#" class="btn btn-default" onclick="showBatchUpdateModal();" ><i class="fas fa-pencil"></i> Batch Update </button>
                            <a href="#" class="btn btn-default"><i class="fas fa-download"></i> {{downloadText}}</a>
                            <a href="#" class="btn btn-default"><i class="fas fa-upload"></i> {{uploadText}}</a>
                            <a href="#" class="btn btn-default"><i class="fas fa-trash"></i> {{deleteText}}</a>
                        </div>
                        <div class="btn-group btn-group-sm visible-xs visible-sm hidden-md hidden-lg">
                            {{> atoms-btn:btn-default ("buttonText": "Actions")}}

                            <button type="button" class="btn btn-default dropdown-toggle" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                {{# caret }}<span class="{{ caret }}"></span>{{/ caret }}
                                <span class="sr-only"></span>
                            </button>
                            <ul class="dropdown-menu dropdown-menu-left">
                                <li><a href="#"><i class="fas fa-plus-circle"></i> {{addText}}</a></li>
                                <li onclick="showBatchUpdateModal();"><a class="fas fa-pencil"> Batch Update </a></li>
                                <li><a href="#"><i class="fas fa-download"></i> {{downloadText}}</a></li>
                                <li><a href="#"><i class="fas fa-upload"></i> {{uploadText}}</a></li>
                                <li><a href="#"><i class="fas fa-trash"></i> {{deleteText}}</a></li>
                            </ul>
                        </div>
                    </div>
                </div>
                <div class="col-xs-6">
                    <div class="btn-toolbar pull-right">
                        <div class="btn-group btn-group-sm text-nowrap">
                            <div class="btn-group">
                                <button type="button" class="btn btn-sm btn-default dropdown-toggle" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                    {{sortText}} {{# caret }}<span class="{{ caret }}"></span>{{/ caret }}
                                </button>
                                <button type="button" class="btn btn-sm btn-default" onclick="$('.sortIcon').toggleClass('hide');">
                                    <i class="fas fa-sort-amount-up sortIcon"></i>
                                    <i class="fas fa-sort-amount-down sortIcon hide"></i>
                                </button>
                                <ul class="dropdown-menu dropdown-menu-right">
                                        {{# dropdownListAllColumns }}
                                            <li {{# separator }}role="separator"{{/ separator }}  ><a href="{{ url }}"><input type="checkbox"/> &nbsp;{{ text }}</a></li>
                                        {{/ dropdownListAllColumns }}
                                </ul>
                            </div>
                            <button class="btn btn-default" data-toggle="collapse" data-parent="#accordion" href="#simpleListPageFilters"><i class="fas fa-filter"></i> {{filterText}}</button>


                            <div class="btn-group">
                                <button type="button" class="btn btn-sm btn-default dropdown-toggle" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                    {{columnConfigText}} {{# caret }}<span class="{{ caret }}"></span>{{/ caret }}
                                </button>
                                <ul class="dropdown-menu dropdown-menu-right">
                                        {{# dropdownListTableColumns }}
                                            <li {{# separator }}role="separator"{{/ separator }}  ><a href="{{ url }}"><input type="checkbox"/> &nbsp;{{ text }}</a></li>
                                        {{/ dropdownListTableColumns }}
                                </ul>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div id="simpleListPageFilters" class="form-group collapse">
            <div class="row">
                <div class="col-xs-12">
                    <fieldset>
                        <legend class="small">Filters</legend>
                        <form class="form-inline" role="form">
                            <div class="row">
                                <div class="col-sm-4">
                                    <div class="form-group">
                                        <label class="control-label">Document Number: &nbsp;</label>
                                        <div class="input-group">
                                            <input type="text" class="form-control" placeholder="Type to search">
                                            <span class="input-group-addon">
                                                <i class="fas fa-search"></i>
                                            </span>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-sm-4">
                                    <div class="form-group">
