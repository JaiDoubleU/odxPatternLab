<div id="batchUpdateModal" class="modal fade">
    <div class="modal-dialog">
        <div class="modal-content">
            {{#showModalHeader}}
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">Ã—</button>
                    <div class="lead modal-title">
                        Batch Update
                    </div>
                </div>
            {{/showModalHeader}}
            <div class="modal-body">
                <div class="help-block text-info"><i class="fal fa-info-circle text-info"></i> Enter values in the fields below and click "Apply to Selected" to modify the selected rows</div>
                <div class="form-group">
                    <label>Date</label>
                    <div class="input-group">
                        <input id="batch-update-input1" type="text" class="form-control">
                        <span class="input-group-btn">
                            <button class="btn btn-default" type="button"><i class="fas fa-search"></i></button>
                        </span>
                        <span class="input-group-btn">
                            <label class="btn btn-default" type="button">
                                <input type="checkbox" onclick="setFieldValue($(this), $('#batch-update-input1'));"> Clear
                            </label>
                        </span>
                    </div>
                </div>
                <div class="form-group">
                    <label>Code</label>
                    <div class="input-group">
                        <input id="batch-update-input2" type="text" class="form-control">
                        <span class="input-group-btn">
                            <a class="btn btn-default" type="button"><i class="fas fa-search"></i></a>
                        </span>
                        <span class="input-group-btn">
                            <label class="btn btn-default" type="button">
                                <input type="checkbox" onclick="setFieldValue($(this), $('#batch-update-input2'));"> Clear
                            </label>
                        </span>
                    </div>
                </div>
                <div class="form-group">
                    <label>Status</label>
                    <div class="input-group">
                        <input id="batch-update-input3" type="text" class="form-control">
                        <span class="input-group-btn">
                            <a class="btn btn-default" type="button"><i class="fas fa-search"></i></a>
                        </span>
                        <span class="input-group-btn">
                            <label class="btn btn-default" type="button">
                                <input type="checkbox" onclick="setFieldValue($(this), $('#batch-update-input3'));"> Clear
                            </label>
                        </span>
                    </div>
                </div>
            </div>
            {{#showModalFooter}}
                <div class="modal-footer" data-dismiss="modal" >
