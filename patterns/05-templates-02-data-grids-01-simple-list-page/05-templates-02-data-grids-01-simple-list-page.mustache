                                        <select class="form-control">
                                            <option>All</option>
                                            <option>New</option>
                                            <option>Pending</option>
                                            <option>Updated</option>
                                        </select>
                                    </div>
                                </div>
                            </div>
                        </form>
                    </fieldset>
                </div>
