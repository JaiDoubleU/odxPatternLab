

    <div class="row form-group">
        <div class="col-xs-6">
            <div class="btn-group btn-group-sm hidden-xs hidden-sm visible-md visible-lg">
                <a href="#" class="btn btn-default"><i class="fas fa-plus-circle"></i> {{addText}}</a>
                <a href="#" class="btn btn-default"><i class="fas fa-download"></i> {{downloadText}}</a>
                <a href="#" class="btn btn-default"><i class="fas fa-upload"></i> {{uploadText}}</a>
            </div>
            <div class="btn-group btn-group-sm visible-xs visible-sm hidden-md hidden-lg">
                <a href="#" class="btn btn-default">Actions</a>

                <a type="button" class="btn btn-default dropdown-toggle" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                    {{# caret }}<span class="{{ caret }}"></span>{{/ caret }}
                    <span class="sr-only"></span>
                </a>
                <ul class="dropdown-menu dropdown-menu-left">
                    <li><a href="#"><i class="fas fa-plus-circle"></i> {{addText}}</a></li>
                    <li><a href="#"><i class="fas fa-download"></i> {{downloadText}}</a></li>
                    <li><a href="#"><i class="fas fa-upload"></i> {{uploadText}}</a></li>
                    <li><a href="#"><i class="fas fa-trash-alt"></i> {{deleteText}}</a></li>
                </ul>
            </div>
        </div>
        <div class="col-xs-6 text-right">
            <div class="btn-group btn-group-sm text-nowrap">
                <a class="btn btn-default" data-toggle="collapse" data-parent="#accordion" href="#paginatedListFilters"><i class="fas fa-filter"></i> {{advancedFilterText}}</a>

                <div class="btn-group">
                    <a type="button" class="btn btn-sm btn-default dropdown-toggle" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                        {{columnConfigText}} {{# caret }}<span class="{{ caret }}"></span>{{/ caret }}
                    </a>
                    <ul class="dropdown-menu dropdown-menu-right">
                            {{#dropdownListTableColumns }}
                                <li {{# separator }} role="separator" {{/ separator }} >
                                    <a href="{{ url }}"><input type="checkbox"/> &nbsp;{{ text }}</a>
                                </li>
                            {{/dropdownListTableColumns }}
                    </ul>
                </div>
            </div>
        </div>
    </div>

    <div id="paginatedListFilters" class="collapse form-group">
        <fieldset>
            <legend class="small">Advanced Filters</legend>
            <div class="row">
                <div class="col-sm-6">
                    <div class="form-group">
                        <label for="input1" class="control-label">Column 1: &nbsp;</label>
                        <div class="input-group">
                            <input type="text" class="form-control" placeholder="Type to search">
                            <span class="input-group-addon">
                                <i class="fas fa-search"></i>
                            </span>
                        </div>
                    </div>
                </div>
                <div class="col-sm-6">
                    <div class="form-group">
                        <label for="input2" class="control-label">Column 2: &nbsp;</label>
                        <div class="input-group">
                            <input type="text" class="form-control" placeholder="Type to search">
                            <span class="input-group-addon">
                                <i class="fas fa-search"></i>
                            </span>
                        </div>
                    </div>
                </div>
            </div>
        </fieldset>
    </div>

    <div class="table-responsive">
        <table id="paginatedList" class="table table-striped table-bordered" width="100%" >
            <thead>
                <tr>
                    <th>Name</th>
                    <th>Position</th>
                    <th>Office</th>
                    <th>Extn.</th>
                    <th>Start date</th>
                    <th>Salary</th>
                </tr>
            </thead>
        </table>
    </div>
