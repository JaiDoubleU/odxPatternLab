  <link rel="stylesheet" href="https://code.jquery.com/ui/1.11.3/themes/smoothness/jquery-ui.css" />

<style>
    #resizableModal .modal-content.ui-resizable {
        flex-direction: column;
        justify-content: space-between;
        display: flex;  /*enables flex content for its children*/
        box-sizing: border-box;
    }
    #resizableModal .modal-content.ui-resizable .modal-header {
        align-self: flex-start;
        width:100%;
    }
    #resizableModal .modal-content.ui-resizable .modal-footer {
        max-height: 60px;
        min-height:60px;
        align-self: flex-end;
        width:100%;
    }
    #resizableModal .modal-content.ui-resizable .modal-body {
        align-self: stretch;
        width:100%;
        height:100%;
    }
</style>

<!-- Button trigger modal -->
<button type="button" class="btn btn-default" data-toggle="modal" data-target="#resizableModal">
    Launch Resizable Modal
</button>

<!-- Modal -->
<div class="modal fade" id="resizableModal" tabindex="-1" role="dialog">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span
                        aria-hidden="true">&times;</span></button>
                <h4 class="modal-title" id="myModalLabel">Resizable Modal</h4>
            </div>
            <div class="modal-body">
                <form>
                    <div class="form-group">
                        <label class="control-label">Name:</label>
                        <input type="text" class="form-control" >
                    </div>
                    <div class="form-group">
                        <label class="control-label">Occupation:</label>
                        <input type="text" class="form-control" >
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
                <button type="button" class="btn btn-primary">Save</button>
            </div>
        </div>
    </div>
</div>

<script src="https://code.jquery.com/ui/1.11.3/jquery-ui.min.js"></script>
<script>
    $('#resizableModal .modal-content').resizable({
        //alsoResize: ".modal-dialog",
        minHeight: 300,
        minWidth: 300
    });
    $('#resizableModal .modal-dialog').draggable();

    $('#resizableModal ').on('show.bs.modal', function () {
        $(this).find('.modal-header').css({
            'cursor':'move'
        });

        $(this).find('.modal-body').css({
            'max-height':'100%'
        });
    });
</script>
